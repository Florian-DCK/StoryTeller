{{! content section }}
    <section class="flex justify-evenly w-fit mb-10 nth-[2]:flex-row-reverse">
        <div class="mx-2">
            <p>{{content}}</p>
        </div>
        <div class="bg-borders min-h-full w-0.5 shrink-0 rounded-full"></div>
        <div class="px-4 py-4 flex flex-col justify-center relative shrink-0">
            <button class="flex items-center gap-2 cursor-pointer"> 
                <p>{{author}}</p>
                <img src='{{avatar}}' class="w-10 aspect-square rounded-full bg-borders"></img>
            </button>
            {{!<button class="absolute bottom-1 cursor-pointer">Illustrer</button>}}
        </div>
    </section>
    